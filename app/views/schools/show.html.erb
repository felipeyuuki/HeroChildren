<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nameSchool) %>:</strong></dt>
  <dd><%= @school.nameSchool %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vacanciesSchool) %>:</strong></dt>
  <dd><%= @school.vacanciesSchool %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighborhood_id) %>:</strong></dt>
  <dd><%= @school.neighborhood_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schools_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_school_path(@school), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              school_path(@school),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %>
