<%- model_class = Child -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nameChild) %>:</strong></dt>
  <dd><%= @child.nameChild %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthDateChild) %>:</strong></dt>
  <dd><%= @child.birthDateChild %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mother_id) %>:</strong></dt>
  <dd><%= @child.mother_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @child.team_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              children_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_child_path(@child), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              child_path(@child),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %>
