<%- model_class = Child -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 2%">ID</th>
      <th style="width: 25%">Nome</th>
      <th style="width: 10%">Data de Nascimento</th>
      <th style="width: 23%">Nome Mãe</th>
      <th style="width: 10%">Turma</th>
      <th style="width: 15%; text-align: center">Criado em</th>
      <th style="width: 15%; text-align: center">Ações</th>



    </tr>
  </thead>
  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= link_to child.id, child_path(child) %></td>
        <td><%= child.nameChild %></td>
        <td><%= child.birthDateChild %></td>
        <td><%= child.mother.nameMother %></td>
        <td><%= child.team.descriptionTeam%></td>
        <td><%=l child.created_at, :format => :short %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_child_path(child), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      child_path(child),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_child_path,
            :class => 'btn btn-success' %>
