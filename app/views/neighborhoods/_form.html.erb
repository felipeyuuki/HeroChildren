<%= form_for @neighborhood, :html => { :class => "form-horizontal neighborhood" } do |f| %>

  <% if @neighborhood.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@neighborhood.errors.count, "erros") %> impedem o Bairro de ser salvo</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @neighborhood.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nameNeighborhood, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nameNeighborhood, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nameNeighborhood) %>
  </div>
  <div class="form-group">
    <%= f.label :sector_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :sector_id, @sector.all, :id, :descriptionSector, include_blank: true %>
    </div>
    <%=f.error_span(:sector_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                neighborhoods_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
