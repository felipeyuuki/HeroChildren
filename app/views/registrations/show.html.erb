<%- model_class = Registration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:dateRegistration) %>:</strong></dt>
  <dd><%= @registration.dateRegistration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:noteRegistration) %>:</strong></dt>
  <dd><%= @registration.noteRegistration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:child_id) %>:</strong></dt>
  <dd><%= @registration.child_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mother_id) %>:</strong></dt>
  <dd><%= @registration.mother_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @registration.team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nurseries_id) %>:</strong></dt>
  <dd><%= @registration.nurseries_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              registrations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registration_path(@registration), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              registration_path(@registration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %>
