<%= form_for @sector, :html => { :class => "form-horizontal sector" } do |f| %>

  <% if @sector.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sector.errors.count, "error") %> prohibited this sector from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sector.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codeSector, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :codeSector, :class => 'form-control' %>
    </div>
    <%=f.error_span(:codeSector) %>
  </div>
  <div class="form-group">
    <%= f.label :descriptionSector, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :descriptionSector, :class => 'form-control' %>
    </div>
    <%=f.error_span(:descriptionSector) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sectors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
