<%- model_class = Sector -%>
<div class="page-header">
  <h1><%=t 'Setores' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:codeSector) %></th>
      <th><%= model_class.human_attribute_name(:descriptionSector) %></th>
      <th><%= model_class.human_attribute_name(:created_at,) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= link_to sector.id, sector_path(sector) %></td>
        <td><%= sector.codeSector %></td>
        <td><%= sector.descriptionSector %></td>
        <td><%=l sector.created_at, :format => :short %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sector_path(sector), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sector_path(sector),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza ?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sector_path,
            :class => 'btn btn-primary' %>
